<div>
  <p><%= link_to "@#{@user.username}", user_path(@user) %></p>
</div>
<div>
  <p><%= @show.title %></p>
</div>
<p>
  <% if @user == current_user %>
    <a>
    <%= link_to "Edit", edit_user_show_path %> |

      <%= link_to "Delete", user_show_path,
          method: :delete,
          data: { confirm: "Are you sure you want to delete this show?" } %>
    </a>
  <% end %>
</p>
